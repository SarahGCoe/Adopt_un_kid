<div class="container-new-kid">
  <h1 class= "title-new-kid">I want to rent my kid</h1>
  <div class="card-form-new">
    <div class="card-form-new-input">

      <%= simple_form_for(@kid) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :personality, as: :check_boxes, collection: Kid::PERSONALITY%>
          <%= f.input :age_category, collection: Kid::AGE %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Submit", type: "submit", class: "btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

