<div class="container-dashboard">

  <div class="container-dashboard-bookings">
    <% if @user.bookings.empty? %>
  <%= link_to "Book a kid", kids_path, class: "btn", style: "float: none" %>

  <% else %>
    <h1>My bookings</h1>
    <div class="container">
      <% @bookings.each do |booking| %>
        <div class="cards-kid">
          <div class="img-kid" style="background-image: url('<%= cl_image_path booking.kid.photo, height: 300, width: 400, crop: :fill, gravity: :face %>')">
          </div>
          <div class="cards-product-infos">
            <h2 class="name-kid"><%= booking.kid.name %></h2>
            <p>Age category | <span><%= booking.kid.age_category %></span></p>
            <p>Personality | <span><%= booking.kid.personality %></span></p>
          </div>
          <div class="card-product-details">
            <p><span><%= booking.kid.price %></span>€/day</p>
            <%= link_to "more details", kid_path(booking.kid), class: "button-small" %>
          </div>
        </div>
      <% end%>
      </div>
    <% end %>
  </div>

  <div class="container-dashboard-kids">
    <% if @user.kids.empty? %>
    <% else %>
      <h1>My kids</h1>
      <div class="container">
      <% @user.kids.each do |kid| %>
        <div class="cards-kid">
          <div class="img-kid"style="background-image: url('<%= cl_image_path kid.photo, height: 300, width: 400, crop: :fill, gravity: :face %>')">
          </div>
          <div class="cards-product-infos">
            <h2 class="name-kid"><%= kid.name %></h2>
            <p>Age category | <span><%= kid.age_category %></span></p>
            <p>Personality | <span><%= kid.personality %></span></p>
          </div>
          <div class="card-product-details">
            <p><span><%= kid.price %></span>€/day</p>
            <%= link_to "more details", kid_path(kid), class: "button-small" %>
          </div>
        </div>
      <% end%>
    </div>
      <% end %>
      <%= link_to "Add a new kid", new_kid_path, class: "btn", style: "float: none" %>
  </div>
</div>

