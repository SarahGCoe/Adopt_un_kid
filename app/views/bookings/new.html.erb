<div class="container-booking">
  <h5>You are booking <%= @kid.name %></h5><br>
  <div class="card-booking-summerize">
    <div class="card-booking-kid">
      <div class="img-kid">
        <%= cl_image_tag @kid.photo, height: 300, width: 300, crop: :fill, gravity: :face %>
      </div>
        <div class="card-booking-summerize-description">
          <p><span>Name:</span> <%= @kid.name %></p>
          <p><span>Age category:</span> <%= @kid.age_category%></p>
          <p><span>personality:</span> <%= @kid.personality %></p>
          <p><span>Description:</span><br> <%= @kid.description %></p>
        </div>
    </div>

    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <p> Price/day: <%= @kid.price %> </p>
      <p> <%= simple_form_for [@kid, @booking] do |f| %> <br>
        <%= f.input :start_date, label: "Pick your dates", as: :string, required: false, input_html: {id: 'range_start'}, id:'booking-input' %>
        <label type="submit" class="btn btn-booking">
          <%= f.submit "Confirm reservation", class: 'd-none' %> </p>
          Confirm reservation
        </label>
      <% end %> <br>
      <div id="booking-total" class="hidden">
        <p> Price/day: <t><%= @kid.price %></t></p>
      </div>
    </div>

  </div>
</div>

